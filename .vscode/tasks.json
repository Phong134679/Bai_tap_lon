{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc.exe build active file",
            "command": "C:\\mingw64\\bin\\gcc.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "-I${workspaceFolder}/sql",  // Đảm bảo rằng thư mục sql được thêm vào include path
                "${workspaceFolder}/src/main.cpp",
                "${workspaceFolder}/src/user.cpp",
                "${workspaceFolder}/src/ui.cpp",
                "${workspaceFolder}/sql/sqlite3.c",  // Biên dịch file sqlite3.c
                "-o", "${workspaceFolder}/my_program",  // Tên file xuất ra
                "-lsqlite3"  // Liên kết thư viện sqlite3
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}